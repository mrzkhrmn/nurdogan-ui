---
import Image from "astro/components/Image.astro";

const baseUrl = import.meta.env.BASE_URL;
---

<section class="relative w-full py-16 md:py-24 px-4 md:px-6 overflow-hidden">
  <div class="absolute inset-0 -z-10">
    <Image
      src={`${baseUrl}building-management-bg.jpg`}
      alt="Referanslar arka planı"
      width={1920}
      height={800}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <div class="relative max-w-[1440px] mx-auto">
    <h2 class="text-white text-3xl md:text-4xl lg:text-5xl font-semibold text-center mb-12 md:mb-16">
      Referanslarımız
    </h2>

    <div class="relative">
      <button class="absolute left-4 md:left-8 top-1/2 -translate-y-1/2 z-30 w-12 h-12 md:w-14 md:h-14 rounded-full bg-[#E30A17] flex items-center justify-center hover:bg-[#c00914] transition-colors shadow-lg">
        <svg class="w-6 h-6 md:w-7 md:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <button class="absolute right-4 md:right-8 top-1/2 -translate-y-1/2 z-30 w-12 h-12 md:w-14 md:h-14 rounded-full bg-[#E30A17] flex items-center justify-center hover:bg-[#c00914] transition-colors shadow-lg">
        <svg class="w-6 h-6 md:w-7 md:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>

      <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12 px-12 md:px-16 lg:px-20">
        <div class="w-full lg:w-[60%] shrink-0">
          <div class="rounded-3xl overflow-hidden shadow-2xl">
            <Image 
              src={`${baseUrl}construction1.png`} 
              alt="Referans proje" 
              width={800} 
              height={600} 
              class="w-full h-[400px] md:h-[500px] lg:h-[600px] object-cover" 
            />
          </div>
        </div>

        <div class="w-full lg:w-[40%] bg-black/60 backdrop-blur-md rounded-3xl p-6 md:p-8 lg:p-10 border border-white/10">
          <div class="text-[#E30A17] text-2xl md:text-3xl font-bold mb-2">
            01 - Çam Apartmanı
          </div>
          <div class="h-0.5 bg-[#E30A17] w-16 mb-4"></div>
          <div class="text-white text-lg md:text-xl font-medium">
            Erenköy
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
