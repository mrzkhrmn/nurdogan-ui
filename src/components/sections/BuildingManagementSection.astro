---
import Image from "astro/components/Image.astro";
import { ArrowRightIcon } from "../icons";

// Production'da (GitHub Pages) base path zorunlu; BASE_URL bazen eksik kalabiliyor
const baseUrl = import.meta.env.DEV ? '/' : (import.meta.env.BASE_URL || '/nurdogan-ui/').replace(/\/?$/, '/');

const managedBuildings = [
  { number: "01", name: "Çam Apartmanı", image: `${baseUrl}bulding-management-interior.jpg` },
  { number: "02", name: "Ekşioğlu Apartmanı", image: `${baseUrl}building-modern.jpg` },
  { number: "03", name: "Dostlar Apartmanı", image: `${baseUrl}construction-image.png` },
  { number: "04", name: "Şans Apartmanı", image: `${baseUrl}landing-photo.png` },
  { number: "05", name: "Güven Apartmanı", image: `${baseUrl}interior-1.png` },
];
---

<section
  id="bina-yonetimi"
  class="relative w-full py-12 sm:py-16 md:py-20 lg:py-20 px-4 md:px-6 mb-12 md:mb-16 lg:mb-20"
>
  <div class="absolute inset-0 -z-10">
    <Image
      src={`${baseUrl}building-management-bg.jpg`}
      alt="Bina yönetimi arka planı"
      width={1920}
      height={800}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/40 md:bg-black/55"></div>
  </div>

  <div class="relative max-w-[1440px] mx-auto">
    <div class="text-center max-w-[980px] mx-auto">
      <p class="text-white/80 text-xs sm:text-sm md:text-base font-semibold tracking-[0.25em] mb-3 uppercase">
        BİNA YÖNETİMİ
      </p>
      <h2 class="text-white text-2xl sm:text-3xl md:text-4xl lg:text-[36px] font-semibold leading-snug md:leading-tight mb-4 sm:mb-6 md:mb-8">
        7 Yıldan Bu Yana Kadıköy ve Çevre İlçelerde Apartman &amp; Site
        Yönetimi Faaliyetlerimizi Başarı ile Sürdürmekteyiz.
      </h2>

      <a
        href={`${baseUrl}bina-yonetimi`}
        class="inline-flex items-center gap-3 rounded-full bg-[#E30A17] pl-2 pr-8 py-2 text-base font-medium text-white hover:bg-[#e30a18df] transition"
        >
        <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center shrink-0">
          <ArrowRightIcon color="#E30A17"/>
        </div>
         Daha Fazla
        </a>
    </div>

    <div class="mt-6 sm:mt-8 md:mt-12 lg:mt-14 flex flex-col lg:flex-row items-stretch gap-4 sm:gap-6 md:gap-8 lg:gap-8">
      <div class="w-full lg:w-[60%]">
        <div class="bg-white/95 rounded-2xl sm:rounded-3xl overflow-hidden shadow-2xl">
          <img
            id="bina-yonetimi-secilen-gorsel"
            src={managedBuildings[0].image}
            alt="Yönetilen apartman örneği"
            class="w-full h-[250px] sm:h-[300px] md:h-[380px] lg:h-[420px] object-cover transition-opacity duration-300"
          />
        </div>
      </div>

      <div class="w-full lg:w-[40%]">
        <div class="h-full bg-black/55 border border-white/10 rounded-2xl sm:rounded-3xl px-4 py-4 sm:px-6 sm:py-6 md:px-8 md:py-8 lg:py-8 text-white backdrop-blur-md flex flex-col">
          <div class="space-y-0 grow">
            {managedBuildings.map((building, index) => (
              <button
                type="button"
                class="bina-yonetimi-secenek w-full flex items-center justify-between py-2 sm:py-3 md:py-4 border-b border-white/10 text-left transition-colors hover:text-white cursor-pointer text-white/85 {index === 0 ? 'active border-[#E30A17] border-b-2 text-[#E30A17]' : ''}"
                data-index={index}
                data-image={building.image}
              >
                <div class="flex items-center gap-3 sm:gap-4">
                  <span class="text-sm sm:text-base font-semibold tracking-wide">
                    {building.number}.
                  </span>
                  <span class="text-sm sm:text-base md:text-lg font-medium">
                    {building.name}
                  </span>
                </div>
              </button>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const img = document.getElementById("bina-yonetimi-secilen-gorsel");
    const buttons = document.querySelectorAll(".bina-yonetimi-secenek");
    if (!img || !buttons.length) return;

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const imageSrc = btn.getAttribute("data-image");
        if (imageSrc) {
          img.style.opacity = "0";
          setTimeout(() => {
            img.src = imageSrc;
            img.style.opacity = "1";
          }, 150);
        }
        buttons.forEach((b) => {
          b.classList.remove("active", "border-[#E30A17]", "border-b-2", "text-[#E30A17]");
          b.classList.add("text-white/85");
        });
        btn.classList.remove("text-white/85");
        btn.classList.add("active", "border-[#E30A17]", "border-b-2", "text-[#E30A17]");
      });
    });
  });
</script>

<style>
  .bina-yonetimi-secenek.active {
    border-bottom-color: #E30A17 !important;
    border-bottom-width: 2px;
    color: #E30A17;
  }
</style>

