---
import Image from "astro/components/Image.astro";
import { ArrowRightIcon, LocationIcon, MailIcon, FacebookIcon, TwitterIcon, LinkedInIcon, YouTubeIcon, InstagramIcon, KepIcon } from "./icons";
const base = (import.meta.env.BASE_URL || '/').replace(/\/?$/, '/');
---

<footer id="iletisim" class="w-full bg-[#1A1A1A] text-white">
  <!-- Newsletter Section -->
  <div class="">
    <div class="max-w-[1600px] mx-auto px-4 md:px-6 lg:px-12 py-8 md:py-12 border-b border-white/10">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6 md:gap-8">
        <h3 class="text-2xl md:text-3xl lg:text-4xl font-semibold text-white">
          Haber Bültenimize Kayıt Olun
        </h3>
        <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3 w-full md:w-auto">
          <input
            type="email"
            placeholder="Eposta adresiniz"
            class="px-4 py-3 md:px-6 md:py-4 rounded-full bg-transparent border border-[#999999] text-[#999999] placeholder:text-white/60 outline-none focus:ring-2 focus:ring-[#a5a5a5] w-full md:w-auto md:min-w-[400px] transition-all duration-300"
          />
          <button class="inline-flex items-center justify-center gap-2 rounded-full bg-[#E30A17] px-6 py-3 md:px-8 md:py-4 text-white font-medium hover:bg-[#c00914] transition-colors whitespace-nowrap">
            Kayıt Ol
            <ArrowRightIcon color="#FFFFFF" />
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="border-b border-white/10">
    <div class="max-w-[1600px] mx-auto px-4 md:px-6 lg:px-12 py-12 md:py-16">
      <div class="flex items-start justify-between  ">
        <div class="space-y-6 w-1/4">
          <Image src={`${(import.meta.env.BASE_URL || '/').replace(/\/?$/, '/')}nurdogan-logo.png`} alt="Nurdoğan Babadağ" width={170} height={100} class="w-28 sm:w-32 md:w-40 lg:w-42.5 h-auto" />
          <p class="text-white/70 text-sm md:text-base leading-relaxed">
            Rapidiously myocardinate cross-platform intellectual capital model. Appropriately create interactive infrastructures.
          </p>
          <div class="flex items-center gap-4">
            <a href="https://www.youtube.com/@nurdoganb" target="_blank" class="w-10 h-10 rounded-full border border-white/30 flex items-center justify-center hover:bg-[#E30A17] hover:border-[#E30A17] transition-colors">
              <YouTubeIcon width={20} height={20}/>
            </a>
            <a href="https://www.instagram.com/nurdoganbabadag/" target="_blank" class="w-10 h-10 rounded-full border border-white/30 flex items-center justify-center hover:bg-[#E30A17] hover:border-[#E30A17] transition-colors">
              <InstagramIcon width={20} height={20}/>
            </a>
          </div>
        </div>

        <div class="space-y-6 w-1/5">
          <h4 class="text-white text-lg md:text-xl font-semibold">İletişim</h4>
          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <div>
                <KepIcon />
              </div>
              <div class="space-y-1">
                <a href="mekakentseldonusum@hs01.kep.tr" class="block text-white/70 text-sm md:text-base hover:text-white transition-colors">mekakentseldonusum@hs01.kep.tr</a>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 rounded-full border border-white/30 flex items-center justify-center shrink-0 mt-1">
                <LocationIcon />
              </div>
              <p class="text-white/70 text-sm md:text-base leading-relaxed">
                Caddebostan Mah. Bağdat Cd. Alevok Apt. No:275 Kat:1 Daire:2 Kadıköy / İSTANBUL
              </p>
            </div>
            <div class="flex items-start gap-3">
              <div class="w-10 h-10 rounded-full border border-white/30 flex items-center justify-center shrink-0 mt-1">
                <MailIcon />
              </div>
              <div class="space-y-1">
                <a href="mailto:infomailrealar@gmail.com" class="block text-white/70 text-sm md:text-base hover:text-white transition-colors">
                  infomailrealar@gmail.com
                </a>
                <a href="mailto:supportmail01@gmail.com" class="block text-white/70 text-sm md:text-base hover:text-white transition-colors">
                  supportmail01@gmail.com
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column - Navigation Links -->
        <div class="space-y-6 ">
          <h4 class="text-white text-lg md:text-xl font-semibold">Bağlantılar</h4>
          <nav class="space-y-3">
            <a href={`${base}hakkimizda`} class="flex items-center gap-2 text-white/70 text-sm md:text-base hover:text-white transition-colors group">
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg" class="opacity-50 group-hover:opacity-100 transition-opacity">
                <path d="M1 1L5 5L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Hakkımızda
            </a>
            <a href={`${base}iletisim`} class="flex items-center gap-2 text-white/70 text-sm md:text-base hover:text-white transition-colors group">
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg" class="opacity-50 group-hover:opacity-100 transition-opacity">
                <path d="M1 1L5 5L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              İletişim
            </a>
            <a href={`${base}projeler`} class="flex items-center gap-2 text-white/70 text-sm md:text-base hover:text-white transition-colors group">
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg" class="opacity-50 group-hover:opacity-100 transition-opacity">
                <path d="M1 1L5 5L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Projeler
            </a>
            <a href={`${base}haberler`} class="flex items-center gap-2 text-white/70 text-sm md:text-base hover:text-white transition-colors group">
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg" class="opacity-50 group-hover:opacity-100 transition-opacity">
                <path d="M1 1L5 5L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Haberler
            </a>
            <a href={`${base}teklif-al`} class="flex items-center gap-2 text-white/70 text-sm md:text-base hover:text-white transition-colors group">
              <svg width="6" height="10" viewBox="0 0 6 10" fill="none" xmlns="http://www.w3.org/2000/svg" class="opacity-50 group-hover:opacity-100 transition-opacity">
                <path d="M1 1L5 5L1 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              Teklif Al
            </a>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <!-- Copyright Section -->
  <div class="w-full bg-[#333333] mx-auto px-4 md:px-6 lg:px-12 py-6 md:py-8">
    <div class="max-w-[1600px] mx-auto flex flex-col md:flex-row items-center justify-between gap-4 text-sm md:text-base">
      <p class="text-white text-center md:text-left">
        Copyright © {new Date().getFullYear()} <span class="text-[#E30A17]">Nurdoğan Babadağ</span>, tüm hakları saklıdır.
      </p>
      <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6">
        <a href={`${base}kullanim-sartlari`} class="text-white hover:text-white transition-colors">
          Kullanım Şartları
        </a>
        <a href={`${base}gizlilik-politikasi`} class="text-white hover:text-white transition-colors">
          Gizlilik Politikası
        </a>
        <a href={`${base}cerezler`} class="text-white hover:text-white transition-colors">
          Çerezler
        </a>
      </div>
    </div>
  </div>
</footer>

