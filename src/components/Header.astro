---
import Image from "astro/components/Image.astro";
import SearchIcon from "./icons/SearchIcon.jsx";
import { TurkeyFlag, ArrowRightIcon, InstagramIcon } from "./icons";
const base = (import.meta.env.BASE_URL || '/').replace(/\/?$/, '/');
const navItems = [
  { label: "Hakkımızda", href: "#hakkimizda" },
  { label: "Projeler", href: `${base}projeler` },
  { label: "Hizmetlerimiz", href: `${base}hizmetler` },
  { label: "Dernek", href: "#hakkimizda" },
  { label: "İletişim", href: `${base}iletisim` },
  { label: "Bina Yönetimi", href: `${base}bina-yonetimi` },
];
interface Props {
  isHomePage?: boolean;
}
const { isHomePage = false } = Astro.props;
const headerClass = isHomePage
  ? "relative z-50 py-5 sm:py-7 md:py-9 lg:py-8 w-full bg-[#E30A17]"
  : "absolute top-0 left-0 right-0 z-50 py-5 sm:py-7 md:py-9 lg:py-8 w-full bg-[#E30A17]";
---

<header class={headerClass}>
  <div class="w-full mx-auto max-w-[1920px]">
    <div class="flex items-center justify-between lg:justify-center h-14 sm:h-16 md:h-18 lg:h-20 gap-4 lg:gap-6 xl:gap-8 2xl:gap-12">

      <a href={base} class="text-xl font-bold tracking-tight shrink-0 bg-white rounded-lg p-1 inline-flex items-center justify-center">
        <Image 
          src={`${(import.meta.env.BASE_URL || '/').replace(/\/?$/, '/')}nurdogan-logo.png`} 
          alt="Logo" 
          width={170} 
          height={100} 
          class="w-32 sm:w-36 md:w-40 lg:w-24 xl:w-48 h-auto"
        />
      </a>

      <nav class="hidden lg:flex items-center gap-4 xl:gap-6 2xl:gap-10 flex-wrap lg:flex-nowrap">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-sm xl:text-base 2xl:text-lg font-medium text-white hover:text-white/90 transition whitespace-nowrap smooth-scroll-link"
          >
            {item.label}
          </a>
        ))}
        <div class="hidden lg:flex items-center bg-white/20 rounded-full px-3 py-2 lg:px-4 lg:py-2 xl:px-5 xl:py-2.5 2xl:px-6 2xl:py-3 w-32 lg:w-36 xl:w-40 2xl:w-44 focus:ring-2 shrink-0 text-white">
          <input
            type="text"
            placeholder="Ara"
            class="w-full text-xs lg:text-sm xl:text-base outline-none text-white placeholder:text-white/80 bg-transparent"
          />
          <SearchIcon />
        </div>
        <a
          href={`${base}teklif-al`}
          class="rounded-full bg-white px-3 xl:px-5 py-2 2xl:px-6 2xl:py-3 text-xs xl:text-sm 2xl:text-base font-medium text-[#E30A17] hover:bg-gray-100 transition flex items-center gap-1 xl:gap-1.5 whitespace-nowrap shrink-0"
        >
          Teklif Al
          <ArrowRightIcon color="#E30A17" />
        </a>
        <a href="https://www.instagram.com/nurdoganbabadag/" target="_blank" class="cursor-pointer flex items-center justify-center shrink-0 text-white">
          <div class="w-6 h-6 xl:w-7 xl:h-7 2xl:w-8 2xl:h-8 flex items-center justify-center [&>svg]:w-full [&>svg]:h-full">
            <InstagramIcon width={24} height={24} color="#FFFFFF" />
          </div>
        </a>
        <button class="w-8 h-8 xl:w-10 xl:h-10 2xl:w-14 2xl:h-14 shrink-0 flex items-center justify-center overflow-hidden bg-white rounded-full p-1.5 xl:p-2 2xl:p-2.5">
          <div class="w-full h-full flex items-center justify-center [&>svg]:w-full [&>svg]:h-full">
            <TurkeyFlag width={39} height={26} />
          </div>
        </button>
      </nav>

      <div class="flex items-center gap-2 sm:gap-3 md:gap-4 lg:hidden">
<button 
        id="mobile-search-btn"
        class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 flex items-center justify-center bg-white/20 rounded-full text-white"
        aria-label="Ara"
      >
        <SearchIcon />
      </button>
        
        <button 
          id="mobile-menu-btn"
          class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 flex flex-col items-center justify-center gap-1.5 text-white"
          aria-label="Menü"
        >
          <span class="mobile-menu-line w-7 h-0.5 sm:w-8 sm:h-1 bg-white transition-all"></span>
          <span class="mobile-menu-line w-7 h-0.5 sm:w-8 sm:h-1 bg-white transition-all"></span>
          <span class="mobile-menu-line w-7 h-0.5 sm:w-8 sm:h-1 bg-white transition-all"></span>
        </button>
      </div>
    </div>

    <div id="mobile-search" class="hidden mt-4">
      <div class="flex items-center bg-white/20 rounded-full px-5 py-3 w-full text-white">
        <input
          type="text"
          placeholder="Ara"
          class="w-full text-base outline-none text-white placeholder:text-white/80 bg-transparent"
        />
        <SearchIcon />
      </div>
    </div>
  </div>

  <div 
    id="mobile-menu"
    class="fixed inset-0 bg-black/95 z-40 transform translate-x-full transition-transform duration-300 lg:hidden"
  >
    <div class="flex flex-col h-full pt-6 px-6 relative">
      <button 
        id="mobile-menu-close-btn"
        class="absolute top-6 right-6 w-12 h-12 flex items-center justify-center text-white hover:text-white/90 transition"
        aria-label="Menüyü Kapat"
      >
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <nav class="flex flex-col gap-6 mt-16">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-xl font-medium text-white hover:text-white/90 transition py-3 border-b border-white/20 smooth-scroll-link"
            onclick="document.getElementById('mobile-menu').classList.add('translate-x-full'); document.getElementById('mobile-menu-btn').classList.remove('active'); return true;"
          >
            {item.label}
          </a>
        ))}
      </nav>
      
      <div class="mt-8 flex flex-col gap-4">
        <a
          href={`${base}teklif-al`}
          class="rounded-full bg-white px-8 py-4 text-lg font-medium text-[#E30A17] hover:bg-gray-100 transition flex items-center justify-center gap-2"
        >
          Teklif Al
          <ArrowRightIcon color="#E30A17" />
        </a>
        <button class="w-16 h-16 mx-auto flex items-center justify-center overflow-hidden bg-white rounded-full p-2">
          <div class="w-full h-full flex items-center justify-center [&>svg]:w-full [&>svg]:h-full">
            <TurkeyFlag width={39} height={26} />
          </div>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  const closeMobileMenu = () => {
    if (mobileMenu) {
      mobileMenu.classList.add('translate-x-full');
    }
    if (mobileMenuBtn) {
      mobileMenuBtn.classList.remove('active');
    }
  };

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('translate-x-full');
      mobileMenuBtn.classList.toggle('active');
    });
  }

  const mobileMenuCloseBtn = document.getElementById('mobile-menu-close-btn');
  if (mobileMenuCloseBtn) {
    mobileMenuCloseBtn.addEventListener('click', closeMobileMenu);
  }

  const mobileSearchBtn = document.getElementById('mobile-search-btn');
  const mobileSearch = document.getElementById('mobile-search');
  
  if (mobileSearchBtn && mobileSearch) {
    mobileSearchBtn.addEventListener('click', () => {
      mobileSearch.classList.toggle('hidden');
    });
  }

  const handleResize = () => {
    if (window.innerWidth >= 1024) { 
      if (mobileSearch) {
        mobileSearch.classList.add('hidden');
      }
        if (mobileMenu) {
        mobileMenu.classList.add('translate-x-full');
      }
      if (mobileMenuBtn) {
        mobileMenuBtn.classList.remove('active');
      }
    }
  };

  window.addEventListener('resize', handleResize);

  if (mobileMenu) {
    mobileMenu.addEventListener('click', (e) => {
      if (e.target === mobileMenu) {
        mobileMenu.classList.add('translate-x-full');
        if (mobileMenuBtn) {
          mobileMenuBtn.classList.remove('active');
        }
      }
    });
  }

  // Smooth scroll functionality
  function smoothScrollTo(targetId: string) {
    const targetElement = document.querySelector(targetId);
    if (targetElement) {
      const headerHeight = 100; // Header yüksekliği için offset
      const targetPosition = (targetElement as HTMLElement).offsetTop - headerHeight;
      
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    }
  }

  // Smooth scroll link handler
  document.querySelectorAll('.smooth-scroll-link').forEach(link => {
    link.addEventListener('click', (e) => {
      const href = (link as HTMLAnchorElement).getAttribute('href');
      if (href && href.startsWith('#')) {
        e.preventDefault();
        smoothScrollTo(href);
        
        // Mobil menüyü kapat
        if (mobileMenu) {
          mobileMenu.classList.add('translate-x-full');
        }
        if (mobileMenuBtn) {
          mobileMenuBtn.classList.remove('active');
        }
      }
    });
  });
</script>

<style>
  #mobile-menu-btn.active .mobile-menu-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  #mobile-menu-btn.active .mobile-menu-line:nth-child(2) {
    opacity: 0;
  }
  
  #mobile-menu-btn.active .mobile-menu-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* 1650px altı için özel optimizasyon */
  @media (max-width: 1650px) {
    header nav {
      gap: 0.5rem !important;
    }
    
    header nav a {
      font-size: 0.875rem !important;
      padding: 0.25rem 0.5rem !important;
    }
    
    header .max-w-\[1920px\] {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  /* 1400px altı için daha agresif optimizasyon */
  @media (max-width: 1400px) {
    header nav {
      gap: 0.375rem !important;
    }
    
    header nav a {
      font-size: 0.8125rem !important;
    }
  }
</style>
