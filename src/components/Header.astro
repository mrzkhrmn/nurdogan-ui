---
import Image from "astro/components/Image.astro";
import SearchIcon from "./icons/SearchIcon.jsx";
import { TurkeyFlag, ArrowRightIcon } from "./icons";
const navItems = [
  { label: "Hakkımızda", href: "#hakkimizda" },
  { label: "Projeler", href: "#projeler" },
  { label: "Hizmetlerimiz", href: "#hizmetlerimiz" },
  { label: "Haber Portalı", href: "#haber-portali" },
  { label: "Dernek", href: "#hakkimizda" },
  { label: "İletişim", href: "#iletisim" },
];
---

<header class="absolute top-0 left-0 right-0 z-50 py-4 sm:py-6 md:py-8 lg:py-10 px-4 sm:px-6 md:px-12 lg:px-20 w-full">
  <div class="w-full mx-auto">
    <div class="flex items-center justify-between lg:justify-center h-12 sm:h-14 md:h-16 lg:gap-32">

      <a href="/" class="text-xl font-bold tracking-tight shrink-0">
        <Image 
          src={`${import.meta.env.BASE_URL}nurdogan-logo.png`} 
          alt="Logo" 
          width={170} 
          height={100} 
          class="w-28 sm:w-32 md:w-40 lg:w-42.5 h-auto"
        />
      </a>

      <nav class="hidden lg:flex items-center gap-4 xl:gap-6 2xl:gap-10">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-xs xl:text-sm font-medium text-white hover:text-gray-200 transition whitespace-nowrap smooth-scroll-link"
          >
            {item.label}
          </a>
        ))}
        <div class="hidden lg:flex items-center bg-[#F0F0F0]/30 rounded-full px-3 py-1.5 w-32 lg:w-36 xl:w-40 focus:ring-2">
          <input
            type="text"
            placeholder="Ara"
            class="w-full text-xs lg:text-sm outline-none text-white placeholder:text-white/70 bg-transparent"
          />
          <SearchIcon />
        </div>
        <a
          href="/teklif-al"
          class="rounded-full bg-red-600 px-3 py-2 xl:px-6 xl:py-3 text-xs xl:text-sm font-medium text-white hover:bg-red-700 transition flex items-center gap-1 xl:gap-2 whitespace-nowrap"
        >
          Teklif Al
          <ArrowRightIcon />
        </a>
        <button class="w-8 h-8 xl:w-10 xl:h-10 shrink-0">
          <TurkeyFlag />
        </button>
      </nav>

      <div class="flex items-center gap-2 sm:gap-3 md:gap-4 lg:hidden">
        <button 
          id="mobile-search-btn"
          class="w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center bg-[#F0F0F0]/30 rounded-full"
          aria-label="Ara"
        >
          <SearchIcon />
        </button>
        
        <button 
          id="mobile-menu-btn"
          class="w-8 h-8 sm:w-10 sm:h-10 flex flex-col items-center justify-center gap-1.5"
          aria-label="Menü"
        >
          <span class="mobile-menu-line w-6 h-0.5 bg-white transition-all"></span>
          <span class="mobile-menu-line w-6 h-0.5 bg-white transition-all"></span>
          <span class="mobile-menu-line w-6 h-0.5 bg-white transition-all"></span>
        </button>
      </div>
    </div>

    <div id="mobile-search" class="hidden mt-4">
      <div class="flex items-center bg-[#F0F0F0]/30 rounded-full px-4 py-2.5 w-full">
        <input
          type="text"
          placeholder="Ara"
          class="w-full text-sm outline-none text-white placeholder:text-white/70 bg-transparent"
        />
        <SearchIcon />
      </div>
    </div>
  </div>

  <div 
    id="mobile-menu"
    class="fixed inset-0 bg-black/95 z-40 transform translate-x-full transition-transform duration-300 lg:hidden"
  >
    <div class="flex flex-col h-full pt-6 px-6 relative">
      <button 
        id="mobile-menu-close-btn"
        class="absolute top-6 right-6 w-10 h-10 flex items-center justify-center text-white hover:text-gray-300 transition"
        aria-label="Menüyü Kapat"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <nav class="flex flex-col gap-6 mt-16">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-lg font-medium text-white hover:text-gray-200 transition py-2 border-b border-white/10 smooth-scroll-link"
            onclick="document.getElementById('mobile-menu').classList.add('translate-x-full'); document.getElementById('mobile-menu-btn').classList.remove('active'); return true;"
          >
            {item.label}
          </a>
        ))}
      </nav>
      
      <div class="mt-8 flex flex-col gap-4">
        <a
          href="/teklif-al"
          class="rounded-full bg-red-600 px-6 py-3 text-base font-medium text-white hover:bg-red-700 transition flex items-center justify-center gap-2"
        >
          Teklif Al
          <ArrowRightIcon />
        </a>
        <button class="w-12 h-12 mx-auto">
          <TurkeyFlag />
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  const closeMobileMenu = () => {
    if (mobileMenu) {
      mobileMenu.classList.add('translate-x-full');
    }
    if (mobileMenuBtn) {
      mobileMenuBtn.classList.remove('active');
    }
  };

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('translate-x-full');
      mobileMenuBtn.classList.toggle('active');
    });
  }

  const mobileMenuCloseBtn = document.getElementById('mobile-menu-close-btn');
  if (mobileMenuCloseBtn) {
    mobileMenuCloseBtn.addEventListener('click', closeMobileMenu);
  }

  const mobileSearchBtn = document.getElementById('mobile-search-btn');
  const mobileSearch = document.getElementById('mobile-search');
  
  if (mobileSearchBtn && mobileSearch) {
    mobileSearchBtn.addEventListener('click', () => {
      mobileSearch.classList.toggle('hidden');
    });
  }

  const handleResize = () => {
    if (window.innerWidth >= 1024) { 
      if (mobileSearch) {
        mobileSearch.classList.add('hidden');
      }
        if (mobileMenu) {
        mobileMenu.classList.add('translate-x-full');
      }
      if (mobileMenuBtn) {
        mobileMenuBtn.classList.remove('active');
      }
    }
  };

  window.addEventListener('resize', handleResize);

  if (mobileMenu) {
    mobileMenu.addEventListener('click', (e) => {
      if (e.target === mobileMenu) {
        mobileMenu.classList.add('translate-x-full');
        if (mobileMenuBtn) {
          mobileMenuBtn.classList.remove('active');
        }
      }
    });
  }

  // Smooth scroll functionality
  function smoothScrollTo(targetId: string) {
    const targetElement = document.querySelector(targetId);
    if (targetElement) {
      const headerHeight = 100; // Header yüksekliği için offset
      const targetPosition = (targetElement as HTMLElement).offsetTop - headerHeight;
      
      window.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
      });
    }
  }

  // Smooth scroll link handler
  document.querySelectorAll('.smooth-scroll-link').forEach(link => {
    link.addEventListener('click', (e) => {
      const href = (link as HTMLAnchorElement).getAttribute('href');
      if (href && href.startsWith('#')) {
        e.preventDefault();
        smoothScrollTo(href);
        
        // Mobil menüyü kapat
        if (mobileMenu) {
          mobileMenu.classList.add('translate-x-full');
        }
        if (mobileMenuBtn) {
          mobileMenuBtn.classList.remove('active');
        }
      }
    });
  });
</script>

<style>
  #mobile-menu-btn.active .mobile-menu-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  #mobile-menu-btn.active .mobile-menu-line:nth-child(2) {
    opacity: 0;
  }
  
  #mobile-menu-btn.active .mobile-menu-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }
</style>
