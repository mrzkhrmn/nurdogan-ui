---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/Footer.astro";
import { ArrowRightIcon, LocationIcon, MailIcon, PhoneIcon, KepIcon } from "../components/icons";

const baseUrl = (import.meta.env.BASE_URL || "/").replace(/\/?$/, "/");

const contact = {
  phoneDisplay: "05XX XXX XX XX",
  phoneHref: "tel:+905000000000",
  email1: "infomailrealar@gmail.com",
  email2: "supportmail01@gmail.com",
  kep: "mekakentseldonusum@hs01.kep.tr",
  address: "Caddebostan Mah. Bağdat Cd. Alevok Apt. No:275 Kat:1 Daire:2 Kadıköy / İSTANBUL",
};

const mapSrc =
  "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3012.4973094283273!2d29.0593392767232!3d40.97058997135599!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac7f9d1b90155%3A0x174ab9f5983b7e2b!2sAktuel%20Gayrimenkul!5e0!3m2!1str!2str!4v1771324228858!5m2!1str!2str";
---

<MainLayout>
  <div class="w-full min-h-screen bg-white">
    <!-- Hero -->
    <section id="iletisim" class="w-full pt-24 sm:pt-28 md:pt-44 pb-10 md:pb-14 px-4 md:px-6">
      <div class="max-w-[1200px] mx-auto">
        <div class="flex flex-col lg:flex-row lg:items-end gap-8 lg:gap-12">
          <div class="flex-1">
            <p class="text-[#E30A17] text-xs md:text-sm font-bold mb-2 tracking-wider uppercase">
              İLETİŞİM
            </p>
            <h1 class="text-[#262322] text-3xl sm:text-4xl md:text-5xl font-bold leading-tight mb-4">
              Bize Ulaşın
            </h1>
            <p class="text-[#525252] text-base md:text-lg leading-relaxed max-w-2xl">
              Adres ve iletişim bilgilerimize aşağıdan ulaşabilir, konumumuzu harita üzerinden görüntüleyebilirsiniz.
            </p>
          </div>

          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 lg:justify-end">
            <a
              href={`${baseUrl}teklif-al`}
              class="inline-flex items-center justify-center gap-2 rounded-full bg-[#E30A17] px-6 py-3.5 text-base font-medium text-white hover:bg-[#c00914] transition-colors w-fit"
            >
              Teklif Al
              <ArrowRightIcon color="#fff" />
            </a>
            <a
              href={`mailto:${contact.email1}`}
              class="inline-flex items-center justify-center gap-2 rounded-full border-2 border-[#E30A17] px-6 py-3.5 text-base font-medium text-[#E30A17] hover:bg-[#E30A17]/5 transition-colors w-fit"
            >
              E-posta Gönder
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- İçerik -->
    <section class="w-full pb-16 md:pb-24 px-4 md:px-6">
      <div class="max-w-[1200px] mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-6 md:gap-8 items-stretch">
          <!-- Sol: İletişim kartları -->
          <div class="lg:col-span-2">
            <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6 md:p-8 h-full">
              <h2 class="text-[#262322] text-xl md:text-2xl font-bold mb-6">
                İletişim Bilgileri
              </h2>

              <div class="space-y-4 md:space-y-5">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-xl bg-[#E30A17] flex items-center justify-center shrink-0">
                    <PhoneIcon color="#FFFFFF" />
                  </div>
                  <div class="min-w-0">
                    <p class="text-[#262322] font-semibold leading-snug">Telefon</p>
                    <a href={contact.phoneHref} class="text-[#525252] hover:text-[#262322] transition-colors wrap-break-word">
                      {contact.phoneDisplay}
                    </a>
                    <p class="text-xs text-[#737373] mt-1">Numarayı güncellemek için `src/pages/iletisim.astro` içindeki `contact` alanını düzenleyin.</p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-xl bg-[#E30A17] flex items-center justify-center shrink-0">
                    <MailIcon />
                  </div>
                  <div class="min-w-0">
                    <p class="text-[#262322] font-semibold leading-snug">E-posta</p>
                    <div class="space-y-1">
                      <a href={`mailto:${contact.email1}`} class="block text-[#525252] hover:text-[#262322] transition-colors wrap-break-word">
                        {contact.email1}
                      </a>
                      <a href={`mailto:${contact.email2}`} class="block text-[#525252] hover:text-[#262322] transition-colors wrap-break-word">
                        {contact.email2}
                      </a>
                    </div>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-xl bg-[#E30A17] flex items-center justify-center shrink-0">
                    <LocationIcon />
                  </div>
                  <div class="min-w-0">
                    <p class="text-[#262322] font-semibold leading-snug">Adres</p>
                    <p class="text-[#525252] leading-relaxed">
                      {contact.address}
                    </p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-xl bg-[#E30A17] flex items-center justify-center shrink-0">
                    <div class="[&>svg]:w-9 [&>svg]:h-auto">
                      <KepIcon />
                    </div>
                  </div>
                  <div class="min-w-0">
                    <p class="text-[#262322] font-semibold leading-snug">KEP</p>
                    <a href={`mailto:${contact.kep}`} class="text-[#525252] hover:text-[#262322] transition-colors wrap-break-word">
                      {contact.kep}
                    </a>
                  </div>
                </div>
              </div>

              <div class="mt-8 pt-6 border-t border-gray-200">
                <p class="text-sm text-[#525252] leading-relaxed">
                  Harita üzerinden rota oluşturmak için sağdaki konum kartını kullanabilirsiniz.
                </p>
              </div>
            </div>
          </div>

          <!-- Sağ: Harita -->
          <div class="lg:col-span-3">
            <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden h-full">
              <div class="px-6 md:px-8 py-5 md:py-6 border-b border-gray-200">
                <h2 class="text-[#262322] text-xl md:text-2xl font-bold">
                  Konum
                </h2>
                <p class="text-[#525252] text-sm md:text-base mt-1">
                  Google Maps üzerinden konumumuzu görüntüleyin.
                </p>
              </div>

              <div class="p-4 md:p-6">
                <div class="rounded-xl overflow-hidden bg-gray-100 h-[360px] sm:h-[420px] md:h-[520px]">
                  <iframe
                    src={mapSrc}
                    width="600"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    class="w-full h-full"
                    title="Google Maps Konum"
                  ></iframe>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <Footer />
</MainLayout>


