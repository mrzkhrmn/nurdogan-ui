---
import MainLayout from "../../layouts/MainLayout.astro";
import Footer from "../../components/Footer.astro";
import Image from "astro/components/Image.astro";
import { allServicesList } from "../../data/services";
import type { AllServiceItem } from "../../data/services";

const baseUrl = (import.meta.env.BASE_URL || "/").replace(/\/?$/, "/");

export function getStaticPaths() {
  return allServicesList.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service: raw } = Astro.props;
const service: AllServiceItem & { imageFull: string } = {
  ...raw,
  imageFull: `${baseUrl}${raw.image}`,
};
---

<MainLayout>
  <div class="w-full min-h-screen bg-white">
    <section class="w-full pt-24 sm:pt-28 md:pt-42 pb-16 md:pb-24 px-4 md:px-6">
      <div class="max-w-[1200px] mx-auto">
        <a
          href={`${baseUrl}hizmetler`}
          class="inline-flex items-center gap-2 text-[#E30A17] text-sm md:text-base font-medium hover:underline mb-8"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Hizmetlere dön
        </a>

        <div class="flex flex-col lg:flex-row lg:gap-12 gap-10">
          <!-- Sol: Servis görseli -->
          <div class="flex-1 lg:max-w-md xl:max-w-lg shrink-0 order-1 lg:order-1">
            <div class="relative aspect-video lg:aspect-4/3 rounded-2xl overflow-hidden bg-gray-100 shadow-lg">
              <Image
                src={service.imageFull}
                alt={service.title}
                width={560}
                height={420}
                class="w-full h-full object-cover"
              />
            </div>
          </div>

          <!-- Sağ: Başlık, açıklama, avantajlar, butonlar -->
          <div class="flex-1 min-w-0 order-2 lg:order-2">
            <h1 class="text-[#262322] text-2xl md:text-3xl lg:text-4xl font-bold leading-tight mb-5 md:mb-6">
              {service.title}
            </h1>
            <p class="text-[#525252] text-base md:text-lg leading-relaxed mb-8">
              {service.description}
            </p>

            <ul class="space-y-3 mb-8">
              {service.advantages.map((adv) => (
                <li class="flex items-start gap-3">
                  <span class="shrink-0 w-6 h-6 rounded-full bg-[#E30A17]/10 flex items-center justify-center mt-0.5">
                    <svg class="w-4 h-4 text-[#E30A17]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <span class="text-[#262322] text-sm md:text-base">{adv}</span>
                </li>
              ))}
            </ul>

            <div class="flex flex-wrap gap-4">
              <a
                href={`${baseUrl}#iletisim`}
                class="inline-flex items-center justify-center rounded-lg border-2 border-[#E30A17] px-6 py-3 text-base font-medium text-[#E30A17] hover:bg-[#E30A17]/5 transition-colors"
              >
                Bilgi al
              </a>
              <button
                type="button"
                id="hizmet-detay-teklif-btn"
                class="inline-flex items-center justify-center rounded-lg bg-[#E30A17] px-6 py-3 text-base font-medium text-white hover:bg-[#c00914] transition-colors"
              >
                Teklif talep et
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <Footer />

  <!-- Teklif formu modal (sayfada mevcut) -->
  <div id="teklif-form-modal" class="fixed inset-0 z-[100] hidden items-center justify-center bg-black/50 p-4" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="bg-white rounded-2xl shadow-xl w-full max-w-xl max-h-[90vh] overflow-y-auto">
      <div class="relative p-6 sm:p-8">
        <button type="button" id="teklif-form-close" class="absolute top-4 right-4 w-9 h-9 rounded-lg bg-[#404040] text-white hover:bg-[#525252] flex items-center justify-center transition-colors" aria-label="Kapat">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
        </button>
        <h2 class="text-center text-[#262322] font-bold mb-6 sm:mb-8">
          <span class="block text-lg sm:text-xl">Apartman & Site Yönetimi</span>
          <span class="block text-xl sm:text-2xl mt-0.5">Teklif Formu</span>
        </h2>
        <form id="teklif-form" class="space-y-4 sm:space-y-5">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5">
            <div>
              <label for="teklif-ad-soyad" class="block text-[#262322] text-sm font-medium mb-1.5">Ad Soyad</label>
              <input type="text" id="teklif-ad-soyad" name="adSoyad" required class="w-full px-4 py-2.5 rounded-lg border border-gray-300 text-[#262322] focus:border-[#E30A17] focus:outline-none focus:ring-1 focus:ring-[#E30A17]" placeholder="Adınız Soyadınız" />
            </div>
            <div>
              <label for="teklif-telefon" class="block text-[#262322] text-sm font-medium mb-1.5">İletişim Telefonu</label>
              <input type="tel" id="teklif-telefon" name="telefon" required class="w-full px-4 py-2.5 rounded-lg border border-gray-300 text-[#262322] focus:border-[#E30A17] focus:outline-none focus:ring-1 focus:ring-[#E30A17]" placeholder="05XX XXX XX XX" />
            </div>
          </div>
          <div>
            <label for="teklif-email" class="block text-[#262322] text-sm font-medium mb-1.5">E-posta</label>
            <input type="email" id="teklif-email" name="email" required class="w-full px-4 py-2.5 rounded-lg border border-gray-300 text-[#262322] focus:border-[#E30A17] focus:outline-none focus:ring-1 focus:ring-[#E30A17]" placeholder="ornek@email.com" />
          </div>
          <div>
            <label for="teklif-bina-adi" class="block text-[#262322] text-sm font-medium mb-1.5">Bina Adı & Adresi</label>
            <input type="text" id="teklif-bina-adi" name="binaAdi" required class="w-full px-4 py-2.5 rounded-lg border border-gray-300 text-[#262322] focus:border-[#E30A17] focus:outline-none focus:ring-1 focus:ring-[#E30A17]" placeholder="Bina adı ve adres bilgisi" />
          </div>
          <div>
            <label for="teklif-mesaj" class="block text-[#262322] text-sm font-medium mb-1.5">Mesajınız</label>
            <textarea id="teklif-mesaj" name="mesaj" rows="4" class="w-full px-4 py-2.5 rounded-lg border border-gray-300 text-[#262322] focus:border-[#E30A17] focus:outline-none focus:ring-1 focus:ring-[#E30A17] resize-y min-h-[100px]" placeholder="Mesajınızı yazınız..."></textarea>
          </div>
          <div class="flex flex-col-reverse sm:flex-row gap-3 sm:gap-4 pt-2">
            <button type="submit" class="w-full sm:flex-1 px-6 py-3 rounded-lg bg-[#E30A17] text-white font-medium hover:bg-[#c00914] transition-colors">Gönder</button>
            <button type="button" id="teklif-form-iptal" class="w-full sm:flex-1 px-6 py-3 rounded-lg bg-white border-2 border-[#E30A17] text-[#E30A17] font-medium hover:bg-[#E30A17]/5 transition-colors">İptal</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const header = document.querySelector("header");
    if (header) header.classList.add("bina-yonetimi-header");
  });

  const teklifBtn = document.getElementById("hizmet-detay-teklif-btn");
  const modal = document.getElementById("teklif-form-modal");
  const closeBtn = document.getElementById("teklif-form-close");
  const iptalBtn = document.getElementById("teklif-form-iptal");
  const form = document.getElementById("teklif-form");

  function openModal() {
    if (!modal) return;
    modal.classList.remove("hidden");
    modal.classList.add("flex");
    modal.setAttribute("aria-hidden", "false");
    document.body.style.overflow = "hidden";
  }
  function closeModal() {
    if (!modal) return;
    modal.classList.add("hidden");
    modal.classList.remove("flex");
    modal.setAttribute("aria-hidden", "true");
    document.body.style.overflow = "";
  }

  teklifBtn?.addEventListener("click", openModal);
  closeBtn?.addEventListener("click", closeModal);
  iptalBtn?.addEventListener("click", closeModal);
  modal?.addEventListener("click", (e) => { if (e.target === modal) closeModal(); });
  document.addEventListener("keydown", (e) => { if (e.key === "Escape" && modal && !modal.classList.contains("hidden")) closeModal(); });
  form?.addEventListener("submit", (e) => { e.preventDefault(); closeModal(); });
</script>

<style is:global>
  header.bina-yonetimi-header,
  body header.bina-yonetimi-header {
    background-color: rgba(0, 0, 0, 0.1) !important;
  }
  header.bina-yonetimi-header nav a:not([href*="teklif-al"]),
  header.bina-yonetimi-header .smooth-scroll-link {
    color: #171717 !important;
  }
  header.bina-yonetimi-header nav a:not([href*="teklif-al"]):hover,
  header.bina-yonetimi-header .smooth-scroll-link:hover {
    color: #404040 !important;
  }
  header.bina-yonetimi-header nav a[href*="teklif-al"] {
    color: #fff !important;
  }
  header.bina-yonetimi-header nav a[href*="teklif-al"] svg path {
    stroke: #fff !important;
  }
  header.bina-yonetimi-header nav div.rounded-full:has(input) {
    background-color: rgba(255, 255, 255, 0.85) !important;
  }
  header.bina-yonetimi-header nav div.rounded-full:has(input) input {
    color: #171717 !important;
  }
  header.bina-yonetimi-header nav div.rounded-full:has(input) input::placeholder {
    color: #525252 !important;
  }
  header.bina-yonetimi-header .mobile-menu-line {
    background-color: #171717 !important;
  }
  header.bina-yonetimi-header nav div.rounded-full:has(input) svg path,
  header.bina-yonetimi-header #mobile-search svg path,
  header.bina-yonetimi-header #mobile-search-btn svg path {
    stroke: #171717 !important;
    fill: none !important;
  }
  header.bina-yonetimi-header a[href*="instagram"] svg path {
    fill: #171717 !important;
  }
</style>
