---
import "../styles/global.css";
import MainLayout from "../layouts/MainLayout.astro";
import { LandingWithData, BinaYonetimiSectionWithData } from "../components/WebsiteTabFetcher.jsx";
import EmployeeSection from "../components/sections/EmployeeSection.astro";
import ServicesSection from "../components/sections/ServicesSection.astro";
import ProjectsSection from "../components/sections/ProjectsSection.astro";
import ProjectsMapSection from "../components/sections/ProjectsMapSection.astro";
import Footer from "../components/Footer.astro";

const baseUrl = (import.meta.env.BASE_URL || "/").replace(/\/?$/, "/");
---

<MainLayout isHomePage={true}>
  <LandingWithData client:load baseUrl={baseUrl} />
  <EmployeeSection />
  <ServicesSection />
  <ProjectsSection />
  <ProjectsMapSection />
  <BinaYonetimiSectionWithData client:load baseUrl={baseUrl} />
  <Footer />
</MainLayout>
